---
import "../styles/global.css";
import MainMenu from "../components/MainMenu.svelte";
import ErrorBoundary from "../components/ErrorBoundary.svelte";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Andromeda - Cosmic Space Explorer | Journey Through the Galaxy</title>
    <meta name="description" content="Embark on an epic journey through multiple planetary systems and discover exoplanets through immersive 3D visualization. Explore our Solar System, Alpha Centauri, and beyond!" />
  </head>

  <body>
    <ErrorBoundary client:load>
      <MainMenu client:load />
    </ErrorBoundary>
  </body>
</html>
